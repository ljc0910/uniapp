.search-area {
  background: #fff;
  padding: 0 30rpx;
  width: 610rpx;
  height: 90rpx;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  overflow: hidden;
  -webkit-box-shadow: 0 30rpx 50rpx 0 #ebeff2;
          box-shadow: 0 30rpx 50rpx 0 #ebeff2;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0 auto;
  margin-top: 8rpx;
  z-index: 1;
  position: relative;
}
.search-area ._img {
  width: 32rpx;
  height: 32rpx;
}
.search-area van-field {
  width: 440rpx;
}
.search-area .search-area-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.search-area .search-area-location {
  font-size: 28rpx;
  color: #333333;
  margin: 0 12rpx;
  width: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.searchIsTop {
  bottom: -90rpx;
  left: 0;
  width: 750rpx;
}
.home-wraper {
  width: 100%;
  height: 100%;
}
.home-wraper .home-cont {
  height: 100%;
}
.home-wraper ::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

