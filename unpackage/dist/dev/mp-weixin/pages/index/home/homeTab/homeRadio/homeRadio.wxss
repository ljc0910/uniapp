.homeRadio .home-radio-area {
  max-height: 70vh;
  max-width: 100%;
  overflow: auto;
  padding: 0 40rpx;
}
.homeRadio .home-radio-area .radio-wraper {
  margin-bottom: 20rpx;
}
.homeRadio .home-radio-area .radio-wraper .radio-title {
  font-size: 28rpx;
  color: #333;
  line-height: 68rpx;
}
.homeRadio .home-radio-area .radio-wraper .radio-list .radioItem {
  width: 145rpx;
  height: 62rpx;
  background: #f7f7f7;
  border: 2rpx solid #dfdfdf;
  text-align: center;
  line-height: 66rpx;
  font-size: 28rpx;
  color: #777777;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  float: left;
  margin-right: 30rpx;
}
.homeRadio .home-radio-area .radio-wraper .radio-list .isOnRadio {
  color: #ff7f5f;
  background: #ffe5df;
  border: 2rpx solid #ff7f5f;
}
.homeRadio .home-radio-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.homeRadio .home-radio-btn .radio-btn {
  width: 376rpx;
  height: 100rpx;
  font-size: 32rpx;
}
.homeRadio .home-radio-btn .radio-btn-cancle {
  color: #777777;
  background: #fff;
  border-color: #fff;
  border-top: 1px solid #dfdfdf;
}
.homeRadio .home-radio-btn .radio-btn-save {
  color: #fff;
  background: #ff7f5f;
  border-color: #ff7f5f;
}

